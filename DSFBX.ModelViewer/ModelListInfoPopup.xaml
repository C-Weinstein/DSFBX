<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="DSFBX.ModelViewer.ModelListInfoPopup" 
        Title="Model Info"
        Height="600" Width="800" ShowInTaskbar="True" Top="0" Left="0" MinHeight="256" MinWidth="224" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:DSFBX.ModelViewer">
    <Grid>
        <TextBox x:Name="TextBoxInfo" IsReadOnly="True" Text="?InfoText?" Margin="10,10,10,39" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 FontFamily="Consolas"
                 VerticalScrollBarVisibility="Visible"
                 />
        <Button 
            x:Name="ButtonOK"
            Click="ButtonOK_Click"
            Content="OK" HorizontalAlignment="Right" Width="93" Height="24" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>